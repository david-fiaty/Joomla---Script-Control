<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_JLSCRIPTCONTROL_FORM_LBL_JSSCRIPT_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_JLSCRIPTCONTROL_FORM_LBL_JSSCRIPT_CREATED_BY"
            description="COM_JLSCRIPTCONTROL_FORM_DESC_JSSCRIPT_CREATED_BY"  /> 

       <field name="title" type="text"
                
            label="COM_JLSCRIPTCONTROL_FORM_LBL_JSSCRIPT_TITLE"
            description="COM_JLSCRIPTCONTROL_FORM_DESC_JSSCRIPT_TITLE" 
                
                
                 required="true"  /> 

       <field name="code" type="textarea"
                
            label="COM_JLSCRIPTCONTROL_FORM_LBL_JSSCRIPT_CODE"
            description="COM_JLSCRIPTCONTROL_FORM_DESC_JSSCRIPT_CODE" 
                
                
                 /> 

       <field name="comments" type="textarea"
                
            label="COM_JLSCRIPTCONTROL_FORM_LBL_JSSCRIPT_COMMENTS"
            description="COM_JLSCRIPTCONTROL_FORM_DESC_JSSCRIPT_COMMENTS" 
                
                
                
            option_on="Yes"
            option_off="Yes" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
